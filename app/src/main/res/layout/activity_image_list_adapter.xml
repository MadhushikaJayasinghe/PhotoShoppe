<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorImageCell"
    android:padding="5dp"
    tools:context="com.example.madhushikabasnayake.photoshoppe_madhushika.NetworkActivities.ImageListAdapter">


    <ImageView
        android:id="@+id/image_view_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorcell"
        android:padding="2dp" />

    <TextView
        android:id="@+id/image_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

</LinearLayout>
