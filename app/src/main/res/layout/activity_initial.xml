<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.madhushikabasnayake.photoshoppe_madhushika.BasicActivities.InitialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sunny_background"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/initial_layout_user_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorLWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/initial_user_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTextBox"
                android:gravity="center"
                android:text="User Name"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/initial_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sign_in_name_blank"
                android:inputType="text"
                android:maxLines="1"
                android:background="@color/colorTransparent"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/initial_layout_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorLWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/initial_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTextBox"
                android:gravity="center"
                android:text="Email"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/initial_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sign_in_email_blank"
                android:maxLines="1"
                android:inputType="textWebEmailAddress"
                android:background="@color/colorTransparent"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/initial_layout_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorLWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/initial_label_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTextBox"
                android:gravity="center"
                android:text="Password"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/initial_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sign_in_password_blank"
                android:inputType="textPassword"
                android:background="@color/colorTransparent"
                android:maxLines="1"
                android:padding="5dp" />
            <TextView
                android:id="@+id/password_strong_text"
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:text="Enter strong password with at least 8 characters with a uppercase letter, a number and a symbol"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="onClick"

            android:padding="10dp"
            android:text="Register"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>