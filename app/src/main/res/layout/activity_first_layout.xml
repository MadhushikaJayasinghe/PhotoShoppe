<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    android:gravity="center"
    tools:context="com.example.madhushikabasnayake.photoshoppe_madhushika.BasicActivities.FirstLayout">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome!"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcome_text"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Log in to continue "
            android:textSize="20dp" />

        <Button
            android:id="@+id/first_log_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_login_text"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Log In"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/welcome_sign_in_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_log_in_button"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="If You are new to PhotoShoppe Register first"
            android:textSize="20dp" />

        <Button
            android:id="@+id/first_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_sign_in_text"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Register"
            android:textSize="25dp" />

    </LinearLayout>

</RelativeLayout>
