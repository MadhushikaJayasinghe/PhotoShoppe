<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context="com.example.madhushikabasnayake.photoshoppe_madhushika.FirstLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="35dp"
            android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/welcome_sign_in_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/welcome_text"
        android:text="If You are new to PhotoShoppe sign in first "
        android:gravity="center"/>
    <Button
        android:id="@+id/first_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_below="@id/welcome_text"
        android:padding="5dp"
        android:onClick="onClick"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/welcome_login_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Hi.. Log in to continue "
        android:layout_below="@id/first_sign_in_button"
        android:gravity="center"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/first_log_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_login_text"
        android:text="Log In"
        android:padding="5dp"
        android:onClick="onClick"
        android:layout_marginTop="20dp"/>
</LinearLayout>

</RelativeLayout>
